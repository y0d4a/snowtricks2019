<div class="modal fade" id="Modal-New" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Nouveau trick</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ form_start(formNew) }}
                {% if app.request.get('tricks') is not empty %}
                    {{ form_row(formNew.title) }}
                    {{ form_row(formNew.description, {'value':app.request.get('tricks')['description']}) }}
                    {{ form_row(formNew.category) }}
                {% else %}
                    {{ form_rest(formNew) }}
                {% endif %}
            </div>
            <div class="modal-footer">
                <button class="btn btn-success">Poster</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                {{ form_end(formNew) }}
            </div>
        </div>
    </div>
</div>