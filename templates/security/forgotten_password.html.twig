{% extends 'base.html.twig' %}

{% block title 'Forgot Password' %}

{% block body %}
    <h1 class="text-center mt-md-15 mb-5 d-none d-md-block">Forgot Password</h1>
    <form class="container-fluid text-center my-5" action="#" method="post">
        <div class="row h-100">
            <div class="col-11 col-md-6 mx-auto my-4 border">
                <h1 class="mx-auto my-5 d-block d-md-none">Forgot Password</h1>
                <div class="col-12 my-3 my-md-auto">
                    <div class="my-4 my-md-3 d-grid">
                        <label class="my-3 my-md-1" for="email">Email *</label>
                        <input class="bg-transparent border-left-0 border-top-0 border-right-0 my-3 my-md-1 text-center" type="email" id="inputEmail" name="email" placeholder="Email" required autofocus />
                    </div>
                    <div class="my-4 my-md-3 text-center d-grid">
                        <button class="btn btn-success order-0 order-md-1 w-50 mx-auto my-md-3" type="submit" name="forgot">Ask for reset password</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}