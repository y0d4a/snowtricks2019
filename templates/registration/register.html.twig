{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1 class="text-center mt-md-15 mb-5 d-none d-md-block">Registration</h1>
    {{ form_start(form, {'attr': {'class': 'container-fluid text-center register my-4'}}) }}
    <div class="row h-100">
        <div class="col-11 col-md-6 mx-auto my-4 border">
            <h1 class="mx-auto my-3 d-block d-md-none">Registration</h1>
            <div class="col-12 my-3 my-md-auto">
                <div class="my-3 my-md-3 d-grid">
                    {{ form_label(form.username, 'Username', { 'label_attr': {'class': 'my-3 my-md-1'} }) }}
                    {{ form_widget(form.username, { 'attr': {'class': 'bg-transparent border-left-0 border-top-0 border-bottom border-right-0 my-3 my-md-1 text-center'} }) }}
                </div>
                <div class="my-3 my-md-3 d-grid">
                    {{ form_label(form.email, 'Email', { 'label_attr': {'class': 'my-3 my-md-1'} }) }}
                    {{ form_widget(form.email, { 'attr': {'class': 'bg-transparent border-left-0 border-top-0 border-right-0 border-bottom my-3 my-md-1 text-center'} }) }}
                </div>
                <div class="my-3 my-md-3 d-grid">
                    {{ form_label(form.plainPassword.first, 'Password', { 'label_attr': {'class': 'my-3 my-md-1'} }) }}
                    {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'bg-transparent border-left-0 border-top-0 border-right-0 border-bottom my-3 my-md-1 text-center'} }) }}
                </div>
                <div class="my-3 my-md-3 d-grid">
                    {{ form_label(form.plainPassword.second, 'Confirm Password', { 'label_attr': {'class': 'my-3 my-md-1'} }) }}
                    {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'bg-transparent border-left-0 border-top-0 border-right-0 border-bottom my-3 my-md-1 text-center'} }) }}
                </div>
                <div class="my-3 my-md-3 text-center">
                    <button class="btn btn-success" type="submit">Create an account</button>
                    <a class="d-block d-md-none my-3 text-primary" href="{{ path('app_login') }}">Already and account ?</a>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}